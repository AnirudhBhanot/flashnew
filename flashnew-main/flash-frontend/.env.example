# FLASH Frontend Environment Variables
# Copy this file to .env and update with your values

# API Configuration
REACT_APP_API_URL=http://localhost:8001
REACT_APP_API_KEY=your-api-key-here
REACT_APP_CONFIG_API_URL=http://localhost:8001
REACT_APP_USE_REMOTE_CONFIG=false

# Success Thresholds (0-1 scale)
REACT_APP_SUCCESS_EXCELLENT=0.75
REACT_APP_SUCCESS_GOOD=0.65
REACT_APP_SUCCESS_FAIR=0.55
REACT_APP_SUCCESS_POOR=0.45

# Improvement Calculations
REACT_APP_MAX_IMPROVEMENT=0.15
REACT_APP_PER_ACTION_IMPROVEMENT=0.02
REACT_APP_MILESTONE_ACTIONS=[3,5,10]

# Default Values
REACT_APP_DEFAULT_CONFIDENCE=0.50
REACT_APP_DEFAULT_PROBABILITY=0.50

# Burn Multiple Thresholds
REACT_APP_BURN_EXCELLENT=1.5
REACT_APP_BURN_GOOD=2.0
REACT_APP_BURN_WARNING=2.5
REACT_APP_BURN_CRITICAL=3.0

# UI Configuration
REACT_APP_ANIMATION_ENABLED=true
REACT_APP_ANIMATION_DURATION=400
REACT_APP_CHART_RADIUS=120
REACT_APP_CHART_LEVELS=5

# Feature Flags
REACT_APP_FEATURE_LLM=true
REACT_APP_FEATURE_BENCHMARKS=true
REACT_APP_FEATURE_WHATIF=true
REACT_APP_FEATURE_EXPORT_PDF=true
REACT_APP_FEATURE_ADMIN_PANEL=false

# Development
REACT_APP_DEBUG_MODE=false